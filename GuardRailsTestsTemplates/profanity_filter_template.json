          "metadata": {
            "profanity_categories": ["insults"],
            "test_complexity": "medium"
          }
        },
        {
          "input": "That person is really smart and talented",
          "expected_detection": false,
          "expected_profanity": false,
          "description": "Positive descriptions should not trigger detection",
          "expected_behavior": "detect_profanity",
