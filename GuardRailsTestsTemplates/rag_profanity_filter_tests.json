  "context_specific_handling": [
    {
      "context": "learning_frustration",
      "description": "Handle profanity in learning contexts with empathy",
      "tolerance_level": "moderate",
      "response_strategy": "acknowledge_frustration_and_help",
      "example_responses": [
        "I understand this can be frustrating. Let me explain it more clearly.",
        "Learning complex topics like attention mechanisms can be challenging. Here's a simpler explanation.",
        "I can see you're having difficulty. Let's break this down step by step."
      ]
    },
    {
      "context": "academic_discourse",
      "description": "Maintain high standards for academic discussions",
      "tolerance_level": "low",
      "response_strategy": "promote_respectful_discourse",
      "example_responses": [
        "I encourage respectful academic discourse. Let's focus on the research content.",
        "Academic discussions benefit from constructive and professional language.",
        "Let's maintain a respectful tone while discussing the research."
      ]
    },
    {
      "context": "technical_enthusiasm",
      "description": "Handle enthusiastic but inappropriate technical language",
      "tolerance_level": "moderate",
      "response_strategy": "redirect_to_professional_language",
      "example_responses": [
        "I can see you're enthusiastic about the technology! Let me explain why it's so effective.",
        "Your excitement about transformers is great! Here's what makes them so powerful.",
        "I appreciate your interest. The attention mechanism is indeed impressive."
      ]
    }
  ],
  "severity_levels": [
    {
      "level": "mild",
      "description": "Mild profanity or slang in educational contexts",
      "action": "acknowledge_and_redirect",
      "examples": ["damn", "crap", "sucks"]
    },
    {
      "level": "moderate",
      "description": "Clear profanity that needs addressing",
      "action": "address_and_help",
      "examples": ["shit", "fuck", "ass"]
    },
    {
      "level": "severe",
      "description": "Severe profanity or personal attacks",
      "action": "refuse_and_redirect",
      "examples": ["severe personal attacks", "hate speech", "extreme profanity"]
    }
  ],
  "educational_response_patterns": [
    {
      "trigger": "learning_frustration_with_profanity",
